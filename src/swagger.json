{
  "openapi": "3.0.3",
  "info": {
    "title": "NodeJS Twilio Prima API",
    "description": "API in NodeJs using Twilio with Prisma ORM",
    "termsOfService": "http://localhost:4000/terms/",
    "contact": {
      "email": "jobson.ra@outlook.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "tags": [
    {
      "name": "users",
      "description": "Everything about the users"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Create a new user in system",
        "requestBody": {
          "description": "Users object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "user@email.com"
                  },
                  "username": {
                    "type": "string",
                    "example": "user"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "countryCode": {
                    "type": "string",
                    "example": "country_code"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "example": "phone_number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "409": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the user that we want to match",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Get user with given ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "User with id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "summary": "Update user with given ID",
        "tags": [
          "users"
        ],
        "requestBody": {
          "description": "User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "user@email.com"
                  },
                  "username": {
                    "type": "string",
                    "example": "user"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "countryCode": {
                    "type": "string",
                    "example": "country_code"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "example": "phone_number"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "User with new values of properties",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "409": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "summary": "Delete user with given ID",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Delete user with id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{id}/validation": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the user that we want to match",
          "schema": {
            "type": "string"
          }
        }
      ],
      "put": {
        "summary": "Validation user with given ID",
        "tags": [
          "users"
        ],
        "requestBody": {
          "description": "User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "user@email.com"
                  },
                  "validationCode": {
                    "type": "integer",
                    "example": 0
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "User with new values of properties",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "409": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "5a823c22-3409-4a09-87f7-a4bce3306b9f"
          },
          "email": {
            "type": "string",
            "example": "user@email.com"
          },
          "username": {
            "type": "string",
            "example": "user"
          },
          "password": {
            "type": "string",
            "example": "password"
          },
          "countryCode": {
            "type": "string",
            "example": "country_code"
          },
          "phoneNumber": {
            "type": "string",
            "example": "phone_number"
          }
        }
      }
    }
  }
}